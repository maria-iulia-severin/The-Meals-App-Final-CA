@model ClientSide.ViewModels.MenuFormViewModel

@{
    ViewBag.Title = "New Menu Form";
}

<h2>New Menu Form</h2>
<form id="newMenu">
    <div class="form-group">
        <label>Name</label>
        <div class="tt-container">
            <input id="name" name="name" required type="text" value="" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label>Moniker</label>
        <div class="tt-container">
            <input id="moniker" name="moniker" type="text" value="" class="form-control" />
        </div>
    </div>

    <button class="btn btn-primary js-submit">Submit</button>
</form>


@section scripts
{
    <script>
        $("#newMenu").on("click", ".js-submit", function () {
            var button = $(this);
            bootbox.confirm("Are you sure you want to send this menu?", function (result) {
                if (result) {
                    $.ajax({
                        url: 'https://localhost:44369/api/menus',
                        method: "POST"
                    });
                }
            });
        });




    </script>
}
